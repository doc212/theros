{% extends "base.html.twig" %}

{% block pre_head %}
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/ui-lightness/jquery-ui.css" type="text/css"/>
    <script type="text/javascript" src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <style type="text/css">
        body{
            background-color:orange;
            display:none;
        }
    </style>
{% endblock %}

{% set javascripts=["combobox.js","login.js"] %}
{% set stylesheets=["combobox.css"] %}

{% block body %}
    <h1>Identification</h1>

    <form method="POST">
    <p>
        <label>Entrez votre nom</label><br/>
        <select id="cbTeacher" style="display:none" name="teacherId">
            {% for t in teachers %}
                <option value="{{t.id}}">{{t.fullname}}</option>
            {% endfor %}
        </select>
    </p>
    <p>
        <label>Entrez votre mot de passe</label><br/>
        <input type="password" id="tbPassword" name="password" class="ui-corner-all ui-widget-content custom-combobox-input"/>
    </p>
    <p>
        <input id="bSubmit" type="submit" value="Envoyer" name="submit"/>
    </p>
    </form>

{% endblock %}
